@model EntityLayer.Concrete.Contact

<div class="col-md-9 contact-middle">
	<h2>Mesaj Formu</h2>
			<form method="post">
			<div class="form-agileinfo">
				<p>Ad Soyad</p>
				<input type="text" asp-for="Name" placeholder="ad soyad" required="" />
				<p>Mail Adresi</p>
				<input type="email" asp-for="Mail" placeholder="mail adresi" required="" />
			</div>
			<div class="form-agileits-w3layouts">
				<p>Mesaj</p>
				<textarea asp-for="Message" placeholder="mesaj..." required=""></textarea>
			<button asp-action="SendMessage" asp-controller="Default" class="btn btn-success" type="submit">MESAJI GÖNDER</button>
			</div>
			<div class="clearfix"></div>
	</form>
</div>