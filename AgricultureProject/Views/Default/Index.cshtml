﻿@{
	ViewData["Title"] = "Index";
	Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

@await Component.InvokeAsync("_HeadPartial")

<body>
	<!-- header -->
	<div class="header">
		<div class="container">

			@await Component.InvokeAsync("_TopAddressPartial")
			@await Component.InvokeAsync("_SocialMediaPartial")
			
			

			<div class="clearfix"> </div>
		</div>
	</div>
	<!-- //header -->
	<!--Slider-->
	@await Component.InvokeAsync("_NavbarPartial")

	<div class="modal fade" id="myModal1" tabindex="-1" role="dialog">
		<!-- Modal1 -->
		<div class="modal-dialog">
			<!-- Modal content-->
			<div id="myModal1" class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<img src="~/web/images/banner1.jpg" alt=" " class="img-responsive">
					<h5>Çevre ve Sürdürülebilirlik</h5>
					<p>
						Çiftçilikte zaman ve enerjiyi azaltmak için yenilikçi ekipmanlar kullanıyoruz. 
						Bu modern teknolojilerle tarımsal iş yükümüzü büyük ölçüde hafifletiyoruz ve müşterilerimize daha verimli çözümler sunuyoruz.
						Akıllı tarım sistemleri ve otomatik ekipmanlar, hem verimliliğimizi artırıyor hem de doğal kaynakların korunmasınakatkıda bulunuyor.
						Çiftçilik faaliyetlerimizi daha sürdürülebilir hale getirerek çevresel etkileri en azaindiriyoruz.
						Bu sayede, hem etkili bir üretim sağlıyor hem de gelecekteki nesiller için sağlıklı 
						bir çevre bırakmayı amaçlıyoruz.
						Yenilikçi ekipmanlar, hem bizim hem de doğanın uyum içinde ilerlemesini sağlıyor.</p>
				</div>
			</div>		
		</div>
	</div>
	<!-- //Modal1 -->
	<!--//Modal2-->
	<div class="modal fade" id="myModal2" tabindex="-1" role="dialog">
		<div class="modal-dialog">
			<!-- Modal content-->
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<img src="~/web/images/banner1.jpg" alt=" " class="img-responsive">
					<h5>Dünya Çapında Çiftçilik Çözümleri</h5>
					<p>
						Dünya çapında çiftçilik çözümleri sunuyoruz. Çiftçilerin karlarını artırmalarına yardımcı olmak için yenilikçi ve verimli ürünler yetiştiriyoruz.
						Modern teknolojiler ve akıllı tarım sistemleri kullanarak, müşterilerimize en iyi sonuçları sağlamak için sürekli olarak yeni yöntemler geliştiriyoruz.
						Bu sayede, hem çiftçilerin üretimlerini optimize etmelerine hem de sürdürülebilir tarım uygulamalarını benimsemelerine yardımcı oluyoruz.
						Tarım alanındaki deneyimimiz ve yenilikçi yaklaşımımız ile, çiftçilerin daha kârlı ve verimli bir şekilde çalışmasını sağlıyoruz.
					</p>
				</div>
			</div>
		</div>
	</div>

	<!--//Slider-->
	<!--//Header-->
	<!-- about -->
	@await Component.InvokeAsync("_AboutPartial")

	<!-- //about-bottom -->
	<!--sevices-->
	@await Component.InvokeAsync("_ServicePartial")
	<!--//sevices-->
	<!-- team -->
	@await Component.InvokeAsync("_TeamPartial")
	<!-- //team -->
	<!--blog -->
	@await Component.InvokeAsync("_AnnouncementPartial")
	<!-- //blog -->
	<!-- Modal2 -->
	@*Modal kısımlarının hepsi AnnouncementPartiala ait olan Default viewda bulunmaktadır.*@
	<!-- //Modal2 -->
	<!-- Modal3 -->
	<!-- //Modal3 -->
	<!-- Modal4 -->
	<!-- //Modal4 -->
	<!--/gallery-->
	@await Component.InvokeAsync("_GalleryPartial")
	<!--//gallery-->
	<!--footer-->
	<div class="contact-agile" id="contact">
		<div class="container">

			@await Component.InvokeAsync("_AddressPartial")
			@await Html.PartialAsync("/Views/Default/SendMessage.cshtml")

		</div>
	</div>

	@await Component.InvokeAsync("_MapPartial")

	<div class="copy">
		<p>© @DateTime.Now.Year Tüm Hakları Saklıdır  | Design by <a href="https://w3layouts.com/">W3layouts</a> </p>
	</div>
	<!--/footer -->
	<!-- js -->
	@await Html.PartialAsync("/Views/Default/ScriptPartial.cshtml")

</body>
</html>