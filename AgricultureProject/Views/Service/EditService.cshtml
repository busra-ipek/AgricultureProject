@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*Bu kodlar AddService viewından alınmıştır.*@
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Güncelleme</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.ServiceID) @*Taşınan id değeri sayfada gizli olarak saklanır.*@
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" asp-for="Title" class="form-control" id="exampleInputName1">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel Adresi</label>
                    <input type="text" asp-for="Image" class="form-control" id="exampleInputEmail3">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" id="exampleTextarea1" rows="4"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-primary">Değişiklikleri Kaydet</button>
            </form>
        </div>
    </div>
</div>
