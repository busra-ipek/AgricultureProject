@model EntityLayer.Concrete.Contact
﻿
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Görüntüleme Sayfası</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.ContactID)
                <div class="form-group">
                    <label for="exampleInputName1">Ad Soyad</label>
                    <input type="text" asp-for="Name" class="form-control">                  
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Mail Adresi</label>
                    <input type="text" asp-for="Mail" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Tarih</label>
                    <input type="text" asp-for="Date" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Mesaj Detayı</label>
                    <textarea class="form-control" rows="10" cols="5" asp-for ="Message"></textarea>
                </div>
                <a asp-controller="Contact" asp-action="Index" class="btn btn-outline-primary">Geri Dön</a>
            </form>
        </div>
    </div>
</div>
